@page
@model Client.Pages.Order.AddModel

<div class="container-fluid">
    <div class="row page-titles">
        <ol class="breadcrumb">
            <li>App/</li>
            <li>
                <a asp-page="Index">Order/</a>
            </li>
            <li class="breadcrumb-item active">Add</li>
        </ol>
    </div>
    <!-- row -->
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h1 class="title-form"> Add New Order for table @Model.TableId</h1>
                </div>
                <div class="card-body">
                    <form class="mb-5" method="post">
                        <div class="d-flex align-items-center">
                            <div class="form-group mb-3 pb-3" style="flex:8; padding-left:10px">
                                <label class="font-w600">Date</label>
                                <input type="datetime-local" class="form-control solid" asp-for="@Model.OrderAddDto.Date">
                                <br />
                                <span asp-validation-for="@Model.OrderAddDto.Date" class="text-danger"></span>

                                <label class="font-w600">Description</label>
                                <textarea rows="8" class="form-control solid" asp-for="@Model.OrderAddDto.Description" placeholder="Description"></textarea>
                                <br />
                                <span asp-validation-for="@Model.OrderAddDto.Description" class="text-danger"></span>

                                <input type="text" class="form-control solid" asp-for="@Model.TableId" hidden>
                            </div>
                        </div>
                        <div class="col-lg-12" style="position:relative">
                            <div class="mb-3 mb-0" style="position:absolute; right:0">
                                <input type="submit" value="Add" class="submit btn btn-primary" name="submit">
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
