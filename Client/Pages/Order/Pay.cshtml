@page
@model Client.Pages.Order.PayModel




<div class="container-fluid">
    <div class="row page-titles">
        <ol class="breadcrumb">
            <li class="breadcrumb-item-no-link">App/</li>
            <li class="breadcrumb-item-no-link">Table/</li>
            <li class="breadcrumb-item active">Pay</li>
        </ol>
    </div>
    <h3>Pay</h3>
    <!-- row -->
    <div class="modal fade" id="sendMessageModal">
        <div class="modal-dialog modal-dialog-centered modal-lg" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">New Supplier</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-body">
                    <form method="post">
                        <table class="display table" style="min-width: 850px; min-height:500px">
                            <thead>
                                <tr>
                                    <th>Stt</th>
                                    <th>Image</th>
                                    <th>Name</th>
                                    <th>UnitPrice</th>
                                    <th>Quantity</th>
                                    <th>Money</th>
                                </tr>
                            </thead>
                            <tbody class="table-group-divider">

                                @for (int i = 0; i < Model.OrderDetailViewDtos.Count; i++)
                                {
                                    <tr>
                                        <td>@Model.OrderDetailViewDtos[i].Stt</td>
                                        <td>
                                            <img class="logo-abbr" src="~/images/product/@Model.OrderDetailViewDtos[i].product.Image" alt="" />
                                        </td>
                                        <td>@Model.OrderDetailViewDtos[i].product.Name</td>
                                      
                                        <td>@Model.OrderDetailViewDtos[i].UnitPrice</td>
                                        <td><input readonly type="number" class="form-control solid" asp-for="@Model.OrderDetailViewDtos[i].Quantity" style="width:100px"></td>
                                        <td>@(Model.OrderDetailViewDtos[i].UnitPrice * Model.OrderDetailViewDtos[i].Quantity)</td>
                                    </tr>
                                }
                                <tr>
                                    <td></td>
                                    <td></td>
                                    <td></td>
                                    <td></td>
                                    <td></td>
                                    <td>
                                        <input readonly type="" class="form-control solid" value="Total: @Model.Total" style="width:100px">
                                    </td>
                                </tr>
                                <tr>
                                    <td></td>
                                    <td></td>
                                    <td></td>
                                    <td></td>
                                    <td></td>
                                    <td>
                                        <div class="col-lg-9" style="position:relative">
                                            <div class="mb-3 mb-0" style="position:absolute; right:0">
                                                <input type="submit" value="Pay" class="submit btn btn-primary" name="submit">
                                            </div>
                                        </div>
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                        <input asp-for="@Model.orderId" type="hidden" />
                        <input asp-for="@Model.Total" type="hidden" />
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

