@page
@model Client.Pages.UserInfo.EditModel
@{
}
<div class="container-fluid">
    <div class="row page-titles">
        <ol class="breadcrumb">
            <li class="breadcrumb-item-no-link">Setting/</li>
            <li class="breadcrumb-item-link">
                <a asp-page="./Index">
                    User/
                </a>
            </li>
            <li class="breadcrumb-item active" id="title2">Add</li>
        </ol>
    </div>
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="modal-body">
                    <div class="card-header">
                        <h4 class="card-title" id="title1">Add User Infomation</h4>
                    </div>
                    <div class="card-body">
                        <form class="comment-form" method="post">
                            <div class="row">
                                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                <div class="col-lg-6">
                                    <div class="mb-3">
                                        <label class="text-black font-w600 form-label">Account<span class="required">*</span></label>
                                        <input type="text" class="form-control" asp-for="EditDto.Account" id="account">
                                        <span asp-validation-for="EditDto.Account" class="text-danger"></span>
                                    </div>
                                </div>
                                @if (Model.isAdd)
                                {
                                    <div class="col-lg-6">
                                        <div class="mb-3">
                                            <label class="text-black font-w600 form-label">PassWord<span class="required">*</span></label>
                                            <input type="password" class="form-control" asp-for="EditDto.Password">
                                            <span asp-validation-for="EditDto.Password" class="text-danger"></span>
                                        </div>
                                    </div>
                                }
                                else
                                {
                                    <input class="form-control" asp-for="EditDto.Password" hidden>
                                    <input class="form-control" asp-for="EditDto.Id" hidden>
                                }
                                <div class="col-lg-6">
                                    <div class="mb-3">
                                        <label class="text-black font-w600 form-label">Full Name</label>
                                        <input type="text" class="form-control" asp-for="EditDto.Fullname">
                                        <span asp-validation-for="EditDto.Fullname" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-lg-12">
                                    <div class="mb-3">
                                        <label class="text-black font-w600 form-label">Role</label>
                                        <select asp-for="EditDto.Role" class="default-select  form-control wide">
                                            <option value="2">Staff</option>
                                            <option value="3">Manager</option>
                                        </select>
                                    </div>
                                </div>
                                <div class="col-lg-12">
                                    <div class="mb-3 mb-0">
                                        <input type="submit" value="Save" class="submit btn btn-primary" name="submit">
                                    </div>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
@section Scripts {
    @if (!Model.isAdd)
    {
        <script>
            document.querySelector(".title1").innerHTML = "Update";
            document.querySelector(".title2").innerHTML = "Update";
            const accountInput = document.querySelector(".account");
            accountInput.disabled = true;
            console.log("abc");
        </script>
    }
}